<?xml version="1.0" encoding="UTF-8"?>
<Window>
  <Font name="宋体" size="13" bold="false"/>
  <Font name="宋体" size="12"/>
  <HorizontalLayout>
    <VerticalLayout>
      <HorizontalLayout height="40" inset="1,0,0,0">
        <Container bkimage="examine_background.bmp" inset="10,10,0,0">
          <HorizontalLayout>
            <Text text="科目：" ></Text>
            <ComboBox name="applyExamSubject" width="200" height="18" bkimage="file='control.png' source='14,60,169,80'">
            </ComboBox>
            <Control width="20" />
            <Text text="学号："></Text>
            <Edit name="applyUserNumber" width="135" height="18" bkimage="file='control.png' source='16,18,169,41'"></Edit>
            <Control width="20" />
            <Button name="applyExamSearch" text="查询" width="90" height="18" normalimage="toolbar_normal.png" hotimage="toolbar_hover.png" pushedimage="toolbar_pushed.png"></Button>
            <Control width="20" />
